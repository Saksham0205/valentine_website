// lib/config/api_config.dart
class ApiConfig {
  static const String baseUrl = 'https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash';
  
  // This will be loaded from environment variables or secure storage
  static String getApiKey() {
    const apiKey = String.fromEnvironment('AIzaSyDzlQfkt8I7n8JvWYnqTUzrXP0g8dJGmDc', defaultValue: '');
    if (apiKey.isEmpty) {
      throw Exception('API key not found. Please set AIzaSyDzlQfkt8I7n8JvWYnqTUzrXP0g8dJGmDc environment variable.');
    }
    return apiKey;
  }

  static String getApiEndpoint() {
    return '$baseUrl:generateContent?key=${getApiKey()}';
  }
}